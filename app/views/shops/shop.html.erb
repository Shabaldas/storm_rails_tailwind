<%= stylesheet_link_tag 'shops' %>
<div class="w-full max-w-screen-2xl mx-auto flex justify-between px-7 md:px-24 mt-8">
	<div data-controller="sidebar" class="flex justify-end mr-5 -mt-12">
		<div data-sidebar-target="sidebarContainer" data-expanded="1"
			class="sidebar w-80 h-screen absolute top-0 left-0 z-50 lg:static lg:h-full lg:max-h-min bg-white lg:rounded-lg py-4 px-7 text-zinc-500 inset-y-0 left-0 transform transition duration-700 ease-in-out">
			<div class="close-btn absolute top-5 right-4" data-action="click->sidebar#toggle">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
				</svg>
			</div>
			<div>
				<div class="pb-4">
					<h4>Категорії</h4>
					<div class="mt-3">
						<div class="flex justify-between">
							<div class="flex items-center">
								<input id="medical_models" type="radio" name="category" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;"/>
								<label for="medical_models" class="ml-3">Медичні моделі</h5>
							</div>
							<p>765</p>
						</div>
					</div>
					<div class="mt-3">
						<div class="flex justify-between items-center">
							<div class="flex items-center">
								<input id="engineer_models" type="radio" name="category" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;" />
								<label for="engineer_models" class="ml-3">Інженерні деталі</h5>
							</div>
							<p>23</p>
						</div>
					</div>
					<div class="mt-3">
						<div class="flex justify-between items-center">
							<div class="flex items-center">
								<input id="radio_models" type="radio" name="category" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;" />
								<label for="radio_models" class="ml-3">Радіо пристрої</h5>
							</div>
							<p>18</p>
						</div>
					</div>
					<div class="mt-3">
						<div class="flex justify-between items-center">
							<div class="flex items-center">
								<input id="new_models" type="radio" name="category" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;" />
								<label for="new_models" class="ml-3">Новітні технології</h5>
							</div>
							<p>11</p>
						</div>
					</div>
				</div>
				<hr />
				<div class="py-4">
					<h4>Ціна</h4>
					<div class="pt-3 pb-6">
						<fieldset class="range-slider -multiple" data-controller="priceslider">
							<div class="shadow-track"></div>
							<input type="range" name="value[from]" class="range-slider__range"
										 data-target="priceslider.rangeFrom"
										 data-action="input->priceslider#updateFromValue"
										 value="147"
										 min="0"
										 max="1500"
										 step="1">
							<input type="range"
										 name="value[to]"
										 class="range-slider__range"
										 data-target="priceslider.rangeTo"
										 data-action="input->priceslider#updateToValue"
										 value="765"
										 min="0"
										 max="1500"
										 step="1">
							<output class="range-slider__value"
											for="value[from]"
											data-target="priceslider.valueFrom">0</output>
							<output class="range-slider__value"
											for="value[to]"
											data-target="priceslider.valueTo">0</output>
						</fieldset>
					</div>
					
				</div>
				<hr />
				<div class="py-4">
					<h4>Матеріали</h4>
					<div class="mt-3">
						<div class="flex items-center">
							<input id="material1" type="radio" name="material" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;" />
							<label for="material1" class="ml-3">Пластмаса 32</h5>
						</div>
					</div>
					<div class="mt-3">
						<div class="flex items-center">
							<input id="material2" type="radio" name="material" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;" />
							<label for="material2" class="ml-3">Пластмаса 18</h5>
						</div>
					</div>
					<div class="mt-3">
						<div class="flex items-center">
							<input id="material3" type="radio" name="material" class="w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none " style="color:#facc15 ; background-image: none; border: none; border-radius: 50%;" />
							<label for="material3" class="ml-3">Нова пластмаса</h5>
						</div>
					</div>
				</div>
				<hr/>
				<div class="pt-5 pb-3 text-gray-800">
					<a href="#">
						<button class="w-full py-2 bg-yellow-400 flex flex-center justify-center rounded hover:bg-yellow-500">Search</button>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="w-full lg:w-9/12">
		<button class="mx-auto flex justify-center items-center bg-yellow-400 px-10 py-1 mb-8 rounded">
			<span>
