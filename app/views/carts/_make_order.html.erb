<div id="make_order">
  <% if current_cart.cart_items.present? %>
    <div class="flex justify-between items-center text-sm text-gray-800 font-medium">
      <h5>
        <%= t('basket.content.summary') %>
      </h5>
      <p><%= render "carts/total_price" %></p>
    </div>
    <%= link_to t('basket.content.btn'), checkout_path, class: "w-full h-16 mt-10 bg-yellow-400 flex justify-center items-center rounded-lg text-base px-3 text-center sm:px-0 sm:text-xl font-medium uppercase" %>
  <% else %>
    <%= link_to 'Back to Products', products_path, class: "w-full h-16 mt-10 bg-yellow-400 flex justify-center items-center rounded-lg text-base px-3 text-center sm:px-0 sm:text-xl font-medium uppercase" %>
  <% end %>
</div>