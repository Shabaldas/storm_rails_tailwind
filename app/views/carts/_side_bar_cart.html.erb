<%= turbo_stream_from current_cart %>

<div id='activeTarget' data-toggle-target="content" class="w-screen md:w-[28rem] h-screen bg-white shadow-lg shadow-gray-600 fixed right-0 top-0 pt-6 px-2 md:pl-8 md:pr-5 hidden z-50">
  <div data-action="click->toggle#toggle" class="block absolute top-6 right-5 flex items-baseline cursor-pointer">
    <%= image_tag("partials_img/remove_icon.png") %>
    <p class="text-base text-zinc-500 font-medium ml-2">Очистити</p>
  </div>
  <div class="flex items-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-line join="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
    <h4 class="text-base text-gray-800 font-medium capitalize ml-2">
      <%= t('basket.content.title') %>
    </h4>
  </div>

  <%= render "carts/empty_basket" %>

  <div id="cart_item" class="h-4/6 overflow-y-auto">
    <% current_cart.cart_items.each do |cart_item| %>
      <%= render "carts/item_line", cart_item: cart_item %>
    <% end %>
  </div>

  <div class="w-full px-8 pb-4 sm:pb-12 mt-4 absolute right-0 bottom-0">
    <div class="w-full h-px bg-gray-300 my-4"></div>
    <%= render "carts/make_order" %>
  </div>
</div>
