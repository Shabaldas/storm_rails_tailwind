<div data-controller="modal" data-modal-allow-background-close="true" data-action="modal#open">
    <div data-modal-target="container" class=" animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
      <div data-action="click->modal#close" style='background-color: rgba(0, 0, 0, 0.8)' class="absolute top-0 left-0 w-full min-h-screen "></div>
      <div class="max-h-screen w-full max-w-lg relative">
        <div class="px-0 py-6 lg:px-6 max-w-sm mx-auto bg-white lg:rounded-3xl shadow-lg text-gray-800">
          <div class="font-medium text-2xl text-center lg:text-left" >
            <%= t('devise.titles.sign_in') %>
          </div>
          <div class="p-4 lg:p-8 text-left">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div>
                <div>
                  <%= f.label :email, t('devise.registrations.email_or') %>
                  <%= f.text_field :email,
                              required: false,
                              class: 'w-full',
                              label: false,
                              input_html: { autocomplete: "email" } %>
                </div>
                <div data-controller="password" class="relative mt-2" >
                  <%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "current-password", class:' w-full form-control unhide', "data-password-target": "unhide" %>
                  <a data-action="click->password#password" class="absolute bottom-3.5 right-2 password-field-icon-1 fas fa-eye-slash"></a>
                </div>
                <div class="my-4" >
                  <%= f.input :remember_me, as: :boolean, label: t('devise.titles.remember_me'), input_html: { class: "mr-2  text-yellow-500 py-2 px-2 align-text-top "} if devise_mapping.rememberable?%>
                </div>
                <div class="flex-grow border-t border-gray-300"></div>
                <div class="my-2 bg-yellow-400 hover:bg-orange-500 text-gray-800 text-center font-bold py-2 px-4 rounded-md">
                  <%= f.button :submit, t('global.header.sign_in') %>
                </div>
                <div class="relative flex items-center">
                    <div class="flex-grow border-t border-gray-300"></div>
                    <span class="flex-shrink mx-3 text-gray-400"><%= t('devise.registrations.or') %></span>
                    <div class="flex-grow border-t border-gray-300"></div>
                </div>
                <%- if devise_mapping.omniauthable? %>
                  <%- resource_class.omniauth_providers.each do |provider| %>
                    <div class="relative my-2 bg-blue-500 hover:bg-blue-500 text-gray-800 text-center py-2 px-4 rounded-md">
                      <%= link_to t('devise.titles.goggle'), omniauth_authorize_path(resource_name, provider), method: :post %><br />
                      <svg class="absolute bottom-0.5 left-2 p-1 h-8 w-8 text-gray-800" width="20" height="20" viewBox="0 0 25 25" stroke-width="4" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M17.788 5.108A9 9 0 1021 12h-8" /></svg>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
