<turbo-frame id='call_question_id_field'>
  <%= form_with model: @call_question, url: save_phone_number_path, data: { controller: :form, action: "turbo:submit-end->form#clear" } do |f| %>
    <div class="flex items-center justify-center mt-3">
      <%= f.text_field :phone_number, class: "w-full lg:w-10/12 h-11 rounded-l-lg py-2.5", type: "tel", placeholder: "+38 (067) 00 00 000" %>
      <%= f.button nil, class: "flex items-center justify-center bg-yellow-400 w-12 h-11 rounded-r-lg border border-slate-400" do %>
        <svg class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
  <% end %>
</turbo-frame>