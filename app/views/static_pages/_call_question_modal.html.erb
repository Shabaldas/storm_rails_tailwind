<div data-controller="modal" data-modal-allow-background-close="true" data-action="modal#open" id="bla">
  <div data-modal-target="container" class=" animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
    <div data-action="click->modal#close" style="background-color: rgba(0, 0, 0, 0.8)" class="absolute top-0 left-0 w-full min-h-screen "></div>
    <div class="w-10/12 md:w-[420px] h-fit rounded-2xl px-4 md:px-6 py-6 md:py-6 bg-white flex flex-col items-center
      justify-between relative z-50 border-[1px] border-zinc-200 md:border-none">
      <div data-action="click->modal#close" class="w-3 h-3 absolute top-6 right-6 cursor-pointer">
        <%= image_tag("partials_img/delete.png") %>
      </div>
      <div class="w-1/3 flex justify-center">
        <%= image_tag("partials_img/success.png") %>
      </div>
      <p class="text-center text-base text-gray-400 pb-4">
        <%= t('static_page.home.we_will_call') %>
      </p>
      <button data-action="click->modal#close" class="w-full lg:w-1/2 flex justify-center items-center text-2xl text-gray-800
          bg-yellow-400 py-3 px-4 mt-2 rounded-xl">
          <%= t('static_page.home.close') %>
      </button>
    </div>
  </div>
</div>
